@page "/Income"
@inject IDialogService DialogService

<PageTitle>Income</PageTitle>

<MudDataGrid Items="@data" T="IncomeModel" Style="background-image: linear-gradient(180deg, rgb(35, 101, 35) 0%, rgb(0, 255, 144) 70%)">
    <ToolBarContent>
        <MudText Typo="Typo.h3" Style="color:white">Incomes</MudText>
    </ToolBarContent>
    <Columns>
        <PropertyColumn Property="x => x.Name" />
        <PropertyColumn Property="x => x.Date" Format="{0:d}" />
        <PropertyColumn Property="x => x.Product" />
        <PropertyColumn Property="x => x.Price" />
    </Columns>
</MudDataGrid>

@code {
    public class IncomeModel
    {
        public IncomeModel(string name, DateTime date, string product, decimal price)
        {
            Name = name;
            Date = date;
            Product = product;
            Price = price;
        }

        public string Name { get; set; }
        public DateTime Date { get; set; }
        public string Product { get; set; }
        public decimal Price { get; set; }
    }

    List<IncomeModel> data = new List<IncomeModel> {
        new IncomeModel("Sale", new DateTime(2023, 5, 1), "Product 1", 10.99m),
        new IncomeModel("Compensation", new DateTime(2023, 5, 5), "Product 2", 15.99m),
        new IncomeModel("Sale", new DateTime(2023, 5, 10), "Product 3", 20.99m)
    };
}
