@inject NavigationManager NavigationManager;

<RadzenRow JustifyContent="JustifyContent.Center" AlignItems="Radzen.AlignItems.Center" Style="height:80vh">
    <RadzenColumn Size="12">
        <MudText Align="Align.Center" Style="font-size:3.2rem; color:white;  -webkit-text-stroke-width: 1px; text-shadow: 4px 0px 4px rgb(0, 0, 50);"><strong>Agri-Cultured</strong></MudText>
