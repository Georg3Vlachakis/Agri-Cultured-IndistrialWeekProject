        <MudButton Variant="MudBlazor.Variant.Text" FullWidth="true"><MudText Style="font-size:1.2rem; color: rgb(102, 255, 178); -webkit-text-stroke-width: 1px; text-shadow: 5px 0px 3px black">About</MudText></MudButton>
    </RadzenColumn>

