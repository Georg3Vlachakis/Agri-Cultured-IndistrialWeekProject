<MudDialog Class="rz-background-color-base-800 rz-shadow-10 rz-border-radius-10 rz-p-1" Style="color: white; text-shadow: 5px px 3px black;">
    <TitleContent>
        Create a new Plant
    </TitleContent>
    <DialogContent>
        <MudTextField T="string" Label="Name" Variant="MudBlazor.Variant.Filled" Margin="Margin.Dense"></MudTextField>
        <MudSelect T="string" Label="Plant Type" AnchorOrigin="Origin.BottomCenter" Variant="MudBlazor.Variant.Filled" Margin="Margin.Dense">
            <MudSelectItem Value="@("Herbs")" />
            <MudSelectItem Value="@("Shrubs")" />
            <MudSelectItem Value="@("Climbers")" />
            <MudSelectItem Value="@("Trees")" />
            <MudSelectItem Value="@("Creepers")" />
        </MudSelect>
        <MudTextField T="DateTime?" Format="yyyy-MM-dd" Label="Date Planted" InputType="InputType.Date" Variant="MudBlazor.Variant.Filled" Margin="Margin.Dense"/>
        <MudSelect T="string" Label="Location" AnchorOrigin="Origin.BottomCenter" Variant="MudBlazor.Variant.Filled" Margin="Margin.Dense">
            <MudSelectItem Value="@("Thessaloniki")" />
            <MudSelectItem Value="@("Serres")" />
            <MudSelectItem Value="@("Kriti")" />
            <MudSelectItem Value="@("Ksanthi")" />
            <MudSelectItem Value="@("Kastoria")" />
        </MudSelect>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}